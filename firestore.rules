rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anyone to read wedding info
    match /WeddingInfo/{document} {
      allow read: if true;
    }
    
    // Allow anyone to create guest entries (for RSVP submissions)
    match /Guests/{document} {
      allow create: if true;
      allow read, update, delete: if false; // Only admins can read/update/delete
    }
    
    // Admin collection - only authenticated admins can access
    match /admins/{document} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.uid;
    }
    
    // Allow admins to read all guest data
    match /Guests/{document} {
      allow read: if request.auth != null && 
        exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
  }
}
